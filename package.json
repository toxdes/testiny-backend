  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "clean": "bash scripts/clean-db.sh",
    "initdb": "sudo systemctl start postgresql.service || sudo service postgresql start || sudo service postgresql restart",
    "gen": "npx prisma db push --preview-feature && npx prisma generate",
    "fake": "ts-node scripts/generateFakeData.ts",
    "studio": "npx prisma studio",
    "all": "yarn initdb && yarn gen && yarn dev",
    "test": "npx jest --coverage --all --color --watch"
  },
